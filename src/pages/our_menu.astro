<style>
  .active {
    color: #054d94ff;
  }
</style>

<script>
  // INTERAKTIV MENU NAVIGATION
  // Find alle sektioner og links i menuen
  const sektioner = document.querySelectorAll("section");
  const links = document.querySelectorAll("nav a");

  // N√•r man scroller p√• siden
  window.onscroll = () => {
    let aktivId = "";

    // Find den sektion, man er n√•et til
    sektioner.forEach((sektion) => {
      if (window.scrollY >= sektion.offsetTop - 40) {
        aktivId = sektion.id;
      }
    });

    // Opdater linkene i menuen
    links.forEach((link) => {
      link.classList.remove("active"); // fjern aktive
      if (link.classList.contains(aktivId)) {
        link.classList.add("active"); // tilf√∏j aktive
      }
    });
  };
</script>
