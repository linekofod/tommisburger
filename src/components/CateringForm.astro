---
// Henter parametrene fra Astro.props
const { h2 = "", id = "#" } = Astro.props;

import Button from "../components/Button.astro";
---

<section
  style="background-image: url(/madpapir.webp); background-size: cover; background-repeat: no-repeat;"
  class="p-xs md:p-2xl lg:p-4xl"
  x-data="{ showsetupform: false, showlockitform: false }"
>
  <div
    class="bg-neutral-50 p-sm md:p-lg lg:p-3xl flex flex-col gap-s md:gap-m relative"
    id={id}
  >
    <h2 class="text-blue-500">{h2}</h2>
    <div class="flex flex-col gap-sm">
      <!-- CHOOSE YOUR FEAST -->
      <form
        class="bg-neutral-50 border-1 border-black-500 p-sm flex flex-col gap-ml"
      >
        <div class="flex flex-col gap-3xs">
          <h3>Choose your feast</h3>
          <div class="flex flex-col gap-ml cursor-auto">
            <p class="text-body-s">Please note - Drinks are not included.</p>
            <!-- Burgers -->
            <div class="flex flex-col gap-xs">
              <div class="flex flex-col gap-3xs">
                <h4>Burgers</h4>
                <p class="text-body-xl">Amount of burgers</p>
              </div>
              <div class="flex flex-wrap gap-s">
                <div class="flex gap-3xs items-center">
                  <label for="beef">Beef burgers</label>
                  <input
                    type="number"
                    id="beef"
                    name="burger"
                    placeholder="0"
                    class="w-[55px] h-fit px-3xs py-4xs font-roboto text-body-s border-1 border-black-500 text-black-500 focus:ring-black-500 focus:border-black-500"
                  />
                </div>
                <div class="flex gap-3xs items-center">
                  <label for="veggie">Veggie burgers</label>
                  <input
                    type="number"
                    id="veggie"
                    name="burger"
                    placeholder="0"
                    class="w-[55px] h-fit px-3xs py-4xs font-roboto text-body-s border-1 border-black-500 text-black-500 focus:ring-black-500 focus:border-black-500"
                  />
                </div>
                <div class="flex gap-3xs items-center">
                  <label for="vegan">Vegan burgers</label>
                  <input
                    type="number"
                    id="vegan"
                    name="burger"
                    placeholder="0"
                    class="w-[55px] h-fit px-3xs py-4xs font-roboto text-body-s border-1 border-black-500 text-black-500 focus:ring-black-500 focus:border-black-500"
                  />
                </div>
              </div>
            </div>
            <!-- Sides -->
            <div class="flex flex-col gap-xs">
              <div class="flex flex-col gap-3xs">
                <h4>Sides</h4>
                <p class="text-body-xl">Amount of fries</p>
              </div>
              <div class="flex flex-wrap gap-s">
                <div class="flex gap-3xs items-center">
                  <label for="classicfries">Classic fries</label>
                  <input
                    type="number"
                    id="classicfries"
                    name="sides"
                    placeholder="0"
                    class="w-[55px] h-fit px-3xs py-4xs font-roboto text-body-s border-1 border-black-500 text-black-500 focus:ring-black-500 focus:border-black-500"
                  />
                </div>
                <div class="flex gap-3xs items-center">
                  <label for="sweetfries">Sweet potato fries</label>
                  <input
                    type="number"
                    id="sweetfries"
                    name="sides"
                    placeholder="0"
                    class="w-[55px] h-fit px-3xs py-4xs font-roboto text-body-s border-1 border-black-500 text-black-500 focus:ring-black-500 focus:border-black-500"
                  />
                </div>
              </div>
            </div>
            <!-- Dips -->
            <div class="flex flex-col gap-xs">
              <div class="flex flex-col gap-3xs">
                <h4>Dips</h4>
                <p class="text-body-xl">Amount of dips</p>
              </div>
              <div class="flex flex-wrap gap-s">
                <div class="flex gap-3xs items-center">
                  <label for="cocktailmayo">Tommi's cocktail</label>
                  <input
                    type="number"
                    id="cocktailmayo"
                    name="dips"
                    placeholder="0"
                    class="w-[55px] h-fit px-3xs py-4xs font-roboto text-body-s border-1 border-black-500 text-black-500 focus:ring-black-500 focus:border-black-500"
                  />
                </div>
                <div class="flex gap-3xs items-center">
                  <label for="tommimayo">Tommi's mayo</label>
                  <input
                    type="number"
                    id="tommimayo"
                    name="dips"
                    placeholder="0"
                    class="w-[55px] h-fit px-3xs py-4xs font-roboto text-body-s border-1 border-black-500 text-black-500 focus:ring-black-500 focus:border-black-500"
                  />
                </div>
                <div class="flex gap-3xs items-center">
                  <label for="tommimayo">Vegan mayo</label>
                  <input
                    type="number"
                    id="veganmayo"
                    name="dips"
                    placeholder="0"
                    class="w-[55px] h-fit px-3xs py-4xs font-roboto text-body-s border-1 border-black-500 text-black-500 focus:ring-black-500 focus:border-black-500"
                  />
                </div>
                <div class="flex gap-3xs items-center">
                  <label for="chilimayo">Chili mayo</label>
                  <input
                    type="number"
                    id="chilimayo"
                    name="dips"
                    placeholder="0"
                    class="w-[55px] h-fit px-3xs py-4xs font-roboto text-body-s border-1 border-black-500 text-black-500 focus:ring-black-500 focus:border-black-500"
                  />
                </div>
                <div class="flex gap-3xs items-center">
                  <label for="béarnaise">Béarnaise</label>
                  <input
                    type="number"
                    id="béarnaise"
                    name="dips"
                    placeholder="0"
                    class="w-[55px] h-fit px-3xs py-4xs font-roboto text-body-s border-1 border-black-500 text-black-500 focus:ring-black-500 focus:border-black-500"
                  />
                </div>
                <div class="flex gap-3xs items-center">
                  <label for="spicybbq">Spicy BBQ</label>
                  <input
                    type="number"
                    id="spicybbq"
                    name="dips"
                    placeholder="0"
                    class="w-[55px] h-fit px-3xs py-4xs font-roboto text-body-s border-1 border-black-500 text-black-500 focus:ring-black-500 focus:border-black-500"
                  />
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="self-end" x-on:click="showsetupform = true">
          <Button href="#setupform">Continue</Button>
        </div>
      </form>

      <!-- SET UP THE DETAILS -->
      <form
        class="bg-neutral-50 border-1 border-black-500 p-sm flex flex-col gap-ml"
        id="setupform"
      >
        <h3>Set up the details</h3>
        <div
          class="flex flex-col gap-ml cursor-auto"
          x-cloak
          x-show="showsetupform"
        >
          <!-- Date and time -->
          <div class="flex flex-col gap-xs">
            <h4>When do you want your food?</h4>
            <div class="flex flex-wrap gap-s">
              <div class="flex flex-col gap-4xs">
                <label for="date">Date</label>
                <input
                  type="date"
                  id="date"
                  name="date"
                  class="w-fit h-fit px-3xs py-4xs font-roboto text-body-s border-1 border-black-500 text-black-500 focus:ring-black-500 focus:border-black-500"
                />
              </div>
              <div class="flex flex-col gap-4xs">
                <label for="time">Time</label>
                <input
                  type="time"
                  id="time"
                  name="time"
                  class="w-fit h-fit px-3xs py-4xs font-roboto text-body-s border-1 border-black-500 text-black-500 focus:ring-black-500 focus:border-black-500"
                />
              </div>
            </div>
          </div>
          <!-- Details -->
          <div class="flex flex-col gap-xs">
            <h4>Your details</h4>
            <div class="flex flex-col gap-s">
              <div class="flex flex-wrap gap-s">
                <div class="flex flex-col gap-4xs">
                  <label for="name">Name*</label>
                  <input
                    type="text"
                    id="name"
                    name="details"
                    placeholder="Your name"
                    required
                    class="w-7xl h-fit px-3xs py-4xs font-roboto text-body-s border-1 border-black-500 text-black-500 focus:ring-black-500 focus:border-black-500"
                  />
                </div>
                <div class="flex flex-col gap-4xs">
                  <label for="lastname">Last name*</label>
                  <input
                    type="text"
                    id="lastname"
                    name="details"
                    placeholder="Your last name"
                    required
                    class="w-7xl h-fit px-3xs py-4xs font-roboto text-body-s border-1 border-black-500 text-black-500 focus:ring-black-500 focus:border-black-500"
                  />
                </div>
              </div>
              <div class="flex flex-wrap gap-s">
                <div class="flex flex-col gap-4xs">
                  <label for="phonenumber">Phone number*</label>
                  <input
                    type="text"
                    id="phonenumber"
                    name="details"
                    placeholder="Your phone number"
                    required
                    class="w-7xl h-fit px-3xs py-4xs font-roboto text-body-s border-1 border-black-500 text-black-500 focus:ring-black-500 focus:border-black-500"
                  />
                </div>
                <div class="flex flex-col gap-4xs">
                  <label for="email">Email</label>
                  <input
                    type="email"
                    id="email"
                    name="details"
                    placeholder="Your email"
                    required
                    class="w-7xl h-fit px-3xs py-4xs font-roboto text-body-s border-1 border-black-500 text-black-500 focus:ring-black-500 focus:border-black-500"
                  />
                </div>
              </div>
              <div class="flex flex-wrap gap-s items-end">
                <div class="flex flex-col gap-4xs">
                  <label for="address">Address*</label>
                  <input
                    type="text"
                    id="address"
                    name="details"
                    placeholder="Your address"
                    required
                    class="w-7xl h-fit px-3xs py-4xs font-roboto text-body-s border-1 border-black-500 text-black-500 focus:ring-black-500 focus:border-black-500"
                  />
                </div>
                <div class="flex flex-col gap-4xs">
                  <label for="city">City*</label>
                  <input
                    type="text"
                    id="city"
                    name="details"
                    placeholder="Your city"
                    required
                    class="w-7xl h-fit px-3xs py-4xs font-roboto text-body-s border-1 border-black-500 text-black-500 focus:ring-black-500 focus:border-black-500"
                  />
                </div>
                <div class="flex flex-col gap-4xs">
                  <input
                    type="text"
                    id="zip"
                    name="details"
                    placeholder="Your ZIP code"
                    required
                    class="w-7xl h-fit px-3xs py-4xs font-roboto text-body-s border-1 border-black-500 text-black-500 focus:ring-black-500 focus:border-black-500"
                  />
                </div>
              </div>
            </div>
          </div>
          <!-- Comments -->
          <div class="flex flex-col gap-xs">
            <h4>Anything We Should Know?</h4>
            <label for="comments" class="flex flex-col gap-4xs"
              >Comments <textarea
                name="comments"
                id="comments"
                placeholder="Type here"
                class="max-w-8xl h-fit px-3xs pt-4xs pb-lg font-roboto text-body-s border-1 border-black-500 text-black-500 focus:ring-black-500 focus:border-black-500"
              ></textarea></label
            >
          </div>
          <div class="self-end" x-on:click="showlockitform = true">
            <Button href="#lockitform">Continue</Button>
          </div>
        </div>
      </form>

      <!-- LOCK IT IN -->
      <form
        class="bg-neutral-50 border-1 border-black-500 p-sm flex flex-col gap-ml"
        id="lockitform"
      >
        <h3>Lock it in</h3>
        <div
          class="flex flex-col gap-ml cursor-auto"
          x-cloak
          x-show="showlockitform"
        >
          <!-- Payment -->
          <div class="flex flex-col gap-xs">
            <div class="flex flex-col gap-3xs">
              <h4>Payment method</h4>
              <p class="text-body-xl">Select your payment option</p>
            </div>
            <div class="flex flex-wrap gap-s">
              <div class="flex gap-3xs items-center">
                <label for="credit">Credit Card</label>
                <input
                  type="radio"
                  id="credit"
                  name="payment"
                  class="cursor-pointer border-1 border-black-500 text-black-500 focus:ring-black-500 focus:border-black-500"
                />
              </div>
              <div class="flex gap-3xs items-center">
                <label for="mobilepay">Mobilepay</label>
                <input
                  type="radio"
                  id="mobilepay"
                  name="payment"
                  class="cursor-pointer border-1 border-black-500 text-black-500 focus:ring-black-500 focus:border-black-500"
                />
              </div>
              <div class="flex gap-3xs items-center">
                <label for="invoice">Invoice</label>
                <input
                  type="radio"
                  id="invoice"
                  name="payment"
                  class="cursor-pointer border-1 border-black-500 text-black-500 focus:ring-black-500 focus:border-black-500"
                />
              </div>
            </div>
          </div>
          <div class="self-end">
            <Button href="/catering_confirmation">Submit</Button>
          </div>
        </div>
      </form>
    </div>
  </div>
</section>

<style>
  /* Numbers input pile vises hele tiden, og ikke først på hover. */
  input[type="number"]::-webkit-inner-spin-button,
  input[type="number"]::-webkit-outer-spin-button {
    -webkit-appearance: inner-spin-button;
    opacity: 1;
    display: block;
  }

  input[type="number"] {
    -moz-appearance: textfield;
    appearance: auto;
  }
</style>
