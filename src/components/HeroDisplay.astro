---
// Henter parametrene fra Astro.props
const { height = "", h1 = "" } = Astro.props;

import { Image } from "astro:assets";
import banner from "../../public/images/tommi_hero.webp";
---

<div
  class="relative overflow-hidden z-30 flex"
  class:list={height}
  style="background-image: url(/public/images/tommi_hero.webp); background-repeat: no-repeat; background-size: cover; background-position: center 42%;"
>
  <h1 class="w-full self-end leading-[0.68] slideup">
    {h1}
  </h1>
</div>

<script>
  // ANIMATIONER
  import { inView, animate } from "motion";

  //   InView animation
  const slideup = document.querySelector(".slideup");

  inView(slideup, () => {
    slideup.classList.add("animate__animated", "animate__slideInUp");
  });
</script>
