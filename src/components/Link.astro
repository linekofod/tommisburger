---
// Henter parametrene fra Astro.props
const {
  href = "#",
  target = "_self",
  variant = "menuLink",
  size = "standard",
  color = "blue",
} = Astro.props;

const linkStyling = "";

const variantClasses = {
  menuLink: "uppercase",
  textLink: "normal-case",
};

const sizeClasses = {
  standard: "font-roboto text-link font-semibold hover:text-[#054D9499]",
  medium:
    "font-roboto text-headline3 font-semibold leading-ml border-b-2 border-transparent transition-all hover:text-blue-500 hover:border-b-2 hover:border-blue-500 hover:-outline-offset-s w-fit",
  small: "font-roboto text-body",
};

const colorClasses = {
  blue: "text-blue-500",
  black: "text-black-500",
};
---

<a
  href={href}
  target={target}
  class:list={[
    linkStyling,
    variantClasses[variant],
    sizeClasses[size],
    colorClasses[color],
  ]}
>
  <slot />
</a>
